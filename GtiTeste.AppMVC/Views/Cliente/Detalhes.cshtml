@model GtiTeste.AppMVC.Models.ClienteModel
@{
    ViewBag.Title = "Detalhe Cliente " + Model.Nome;
}

<h1>@ViewBag.Title</h1>
<hr />
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.Cpf, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.DisplayFor(model => model.Cpf, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-4">
                @Html.DisplayFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RG, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.DisplayFor(model => model.RG, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <label class="control-label col-md-2">Data Expedição </label>
            <div class="col-md-2">
                <div name='@Html.NameFor(model=> model.DataExpedicao)'>@Model.DataExpedicao.ToString("dd/MM/yyyy")</div>
            </div>

            <label class="control-label col-md-2">Orgão Expedição </label>
            <div class="col-md-1">
                @Html.DisplayFor(model => model.OrgaoExpedicao, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            @Html.LabelFor(model => model.UF, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-1">
            @Html.DisplayFor(model => model.UF, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-1">Sexo </label>
            <div class="col-md-2">
                @Html.DisplayFor(model => model.Sexo, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <label class="control-label col-md-2">Dta Nascimento </label>
            <div class="col-md-2">
                <div name='@Html.NameFor(model=> model.DataNascimento)'>@Model.DataNascimento.ToString("dd/MM/yyyy")</div>
            </div>

            <label class="control-label col-md-2">Estado Civil </label>
            <div class="col-md-2">
                @Html.DisplayFor(model => model.EstadoCivil, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <h1>Endereço</h1>
        <hr /><br />

        <div class="form-group">
            @Html.LabelFor(model => model.Endereco.Cep, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.DisplayFor(model => model.Endereco.Cep, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            @Html.LabelFor(model => model.Endereco.Logradouro, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.DisplayFor(model => model.Endereco.Logradouro, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            @Html.LabelFor(model => model.Endereco.Numero, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.DisplayFor(model => model.Endereco.Numero, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">

            <label class="control-label col-md-1">Compl. </label>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.Endereco.Complemento, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            @Html.LabelFor(model => model.Endereco.Bairro, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.DisplayFor(model => model.Endereco.Bairro, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            @Html.LabelFor(model => model.Endereco.Cidade, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.DisplayFor(model => model.Endereco.Cidade, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            @Html.LabelFor(model => model.Endereco.UF, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-1">
            @Html.DisplayFor(model => model.Endereco.UF, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        </div>
        <br>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-4">
                <a class="btn btn-info" href="@Url.Action("Index", "Cliente")">Voltar</a>
            </div>
        </div>
    </div>
}
